curl --header "Content-Type: application/json" --request GET --data '{"user_name": "test"}' http://localhost:8080/api/contacts

---------------------@@@@@@----------------------
/authors:

--POST
curl --header "Content-Type: application/json" --request POST --data '{"name": "test", "sername": "setest"}' http://localhost:5000/authors

--GET
curl --header "Content-Type: application/json" --request GET http://localhost:5000/authors
curl --header "Content-Type: application/json" --request GET http://localhost:5000/authors?id=1

--PUT
curl --header "Content-Type: application/json" --data '{"author_id": 16, "book_id": [20, 21]}' --request PUT http://localhost:5000/authors
---------------------@@@@@@----------------------

/books:

--POST
curl --header "Content-Type: application/json" --request POST --data '{"book":{"name": "test book", "description": "lorem xho to tam ipsem asdf"}, "author_id": [1, 2]}' http://localhost:5000/books

--GET
curl --header "Content-Type: application/json" --request GET http://localhost:5000/books?id=22
curl --request GET http://localhost:5000/books

--PATCH
curl --header "Content-Type: application/json" --data '{"book_id": 22, "rating": 5}' --request PATCH http://localhost:5000/books

--PUT
curl --header "Content-Type: application/json" --data '{"book_id": 22, "author_id": [18]}' --request PUT http://localhost:5000/books

--DELETE
curl --header "Content-Type: application/json" --data '{"id": 2}' --request DELETE http://localhost:5000/books
---------------------@@@@@@----------------------